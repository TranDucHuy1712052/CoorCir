<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#F2F2F2"
        android:layout_alignStart="@id/image_view_circle_avatar"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginStart="60dp"
            tools:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/text_view_circle_name"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@tools:sample/avatars"
                android:id="@+id/image_view_user1"
                android:layout_marginRight="7dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@drawable/ic_launcher_background"
                android:id="@+id/image_view_user2"
                android:layout_marginRight="7dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@drawable/ic_launcher_background"
                android:id="@+id/image_view_user3"
                android:layout_marginRight="7dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@drawable/ic_launcher_background"
                android:id="@+id/image_view_user4"
                android:layout_marginRight="7dp"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@android:drawable/ic_menu_manage"
                android:id="@+id/image_btn_circle_option"
                android:layout_marginLeft="7dp" />



        </LinearLayout>
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/image_view_circle_avatar"
        tools:src="@tools:sample/backgrounds/scenic"/>


</RelativeLayout>